{
  "$schema": "https://doc-ugs.org/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "gunicorn index:app --workers 4 --worker-class uvicorn.workers.UvicornWorker --host 0.0.0.0:80 --port $PORT",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
